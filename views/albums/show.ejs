<section id="show-page">
    <div>Title: </div>
    <div><%= album.title %></div>
    <div>Release Year: </div>
    <div><%= album.releaseYear %></div>
    <div>Genre: </div>
    <div><%= album.genre %></div>
    <div>By: </div>
    <div><%= album.by.join(', ') %></div>
  </section>
